{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "removeComments": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "baseUrl": "src",
    "rootDir": "src",
    "typeRoots": [
      "./typings", "./node_modules/@types"
    ]
  },
  "include": ["src", "typings", "./node_modules/@types"]
}
